# IOE-DREAM 开发环境配置文件
# 仅用于开发测试，请勿用于生产环境

# ==================== 基础配置 ====================
ENVIRONMENT=development
COMPOSE_PROJECT_NAME=ioedream-dev
COMPOSE_FILE=docker-compose-all.yml

# 数据和日志存储目录
DATA_DIR=./data
LOGS_DIR=./logs

# ==================== 数据库配置 ====================
# MySQL数据库配置
MYSQL_HOST=mysql
MYSQL_PORT=3306
MYSQL_DATABASE=ioedream
MYSQL_USER=root
MYSQL_ROOT_PASSWORD=root
MYSQL_PASSWORD=root

# Nacos数据库配置
NACOS_DATABASE=nacos

# ==================== Redis配置 ====================
# Redis缓存配置
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis123

# ==================== Nacos配置 ====================
# Nacos注册中心和配置中心
NACOS_HOST=nacos
NACOS_PORT=8848
NACOS_NAMESPACE=dev
NACOS_GROUP=IOE-DREAM

# Nacos认证配置
NACOS_AUTH_TOKEN=SecretKey012345678901234567890123456789012345678901234567890123456789
NACOS_AUTH_IDENTITY_KEY=nacos
NACOS_AUTH_IDENTITY_VALUE=nacos

# ==================== 应用服务端口配置 ====================
# 服务端口配置
GATEWAY_PORT=8080
COMMON_SERVICE_PORT=8088
DEVICE_COMM_PORT=8087
OA_SERVICE_PORT=8089
ACCESS_SERVICE_PORT=8090
ATTENDANCE_SERVICE_PORT=8091
VIDEO_SERVICE_PORT=8092
CONSUME_SERVICE_PORT=8094
VISITOR_SERVICE_PORT=8095

# 前端应用端口
WEB_ADMIN_PORT=3000

# ==================== Nginx配置 ====================
# Nginx端口配置（开发环境使用HTTP）
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# ==================== JVM配置 ====================
# 开发环境JVM配置（较小内存）
JVM_XMS=512m
JVM_XMX=1024m
JVM_MAX_DIRECT_MEMORY_SIZE=256m

# JVM参数配置
JVM_OPTS="-server -Xms${JVM_XMS} -Xmx${JVM_XMX} -XX:+UseG1GC -Dfile.encoding=UTF-8 -Duser.timezone=Asia/Shanghai"

# ==================== 监控配置 ====================
# Actuator端口配置
ACTUATOR_PORT=9999
ACTUATOR_MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics,env,beans

# 日志级别配置（开发环境详细日志）
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_IOEDREAM=DEBUG
LOG_LEVEL_SPRING=INFO
LOG_LEVEL_MYBATIS=DEBUG

# ==================== 安全配置 ====================
# JWT配置（开发环境简单配置）
JWT_SECRET=IOEDREAM_JWT_Secret_Key_Dev_2024
JWT_EXPIRATION=86400

# 接口加密配置（开发环境可关闭）
API_ENCRYPT_ENABLED=false
API_ENCRYPT_KEY=IOEDREAM_API_Encrypt_Key_Dev_2024
API_ENCRYPT_IV=IOEDREAM_API_Encrypt_IV_Dev_2024

# ==================== 文件存储配置 ====================
# 文件上传配置（开发环境限制较小）
FILE_UPLOAD_MAX_SIZE=50MB
FILE_UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx,txt

# 文件存储路径
FILE_STORAGE_PATH=./data/files
FILE_TEMP_PATH=./data/temp

# ==================== 缓存配置 ====================
# 开发环境缓存时间较短
LOCAL_CACHE_MAX_SIZE=100
LOCAL_CACHE_EXPIRE_MINUTES=5
REDIS_CACHE_EXPIRE_SECONDS=300
REDIS_CACHE_MAX_IDLE=300

# ==================== 开发调试配置 ====================
# 开发环境启用调试
DEBUG_ENABLED=true
PROFILE_ENABLED=true
ACTUATOR_HEALTH_SHOW_DETAILS=always

# 热部署配置
RESTART_ON_CONFIG_CHANGE=true
LOG_LEVEL_LIVE_RELOAD=true

# ==================== 第三方服务配置 ====================
# 开发环境可以使用测试账号
SMS_ACCESS_KEY_ID=your_test_access_key_id
SMS_ACCESS_KEY_SECRET=your_test_access_key_secret
SMS_SIGN_NAME=IOE-DREAM-DEV
SMS_TEMPLATE_CODE=SMS_000000000

OSS_ACCESS_KEY_ID=your_test_oss_access_key_id
OSS_ACCESS_KEY_SECRET=your_test_oss_access_key_secret
OSS_BUCKET_NAME=ioedream-dev-files
OSS_ENDPOINT=https://oss-cn-hangzhou.aliyuncs.com

# ==================== 邮件配置 ====================
# 开发环境可以使用测试邮箱
SMTP_HOST=smtp.qq.com
SMTP_PORT=587
SMTP_USERNAME=your_test@qq.com
SMTP_PASSWORD=your_test_smtp_password
SMTP_FROM_NAME=IOE-DREAM开发环境

# ==================== 默认管理员配置 ====================
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=123456
DEFAULT_ADMIN_EMAIL=admin@dev.ioedream.com