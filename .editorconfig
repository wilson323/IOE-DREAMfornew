root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.{java,xml,md,js,ts,vue,json,yml,yaml,sh,ps1}]
charset = utf-8
end_of_line = lf
insert_final_newline = true

# EditorConfig配置 - 确保团队开发环境一致性
# 根目录配置文件，影响所有子目录

root = true

# 所有文件通用配置
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Java文件特定配置
[*.java]
indent_style = space
indent_size = 4
continuation_indent_size = 8

# XML配置文件
[*.xml]
indent_style = space
indent_size = 2

# YAML配置文件
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON配置文件
[*.json]
indent_style = space
indent_size = 2

# Markdown文件
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# JavaScript/TypeScript文件
[*.{js,ts,jsx,tsx}]
indent_style = space
indent_size = 2

# CSS文件
[*.css]
indent_style = space
indent_size = 2

# Vue文件
[*.vue]
indent_style = space
indent_size = 2

# Shell脚本
[*.sh]
indent_style = space
indent_size = 2

# DOS批处理文件
[*.bat]
end_of_line = crlf