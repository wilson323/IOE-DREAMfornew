{
  "name": "ioedream-web-main",
  "version": "1.0.0",
  "description": "IOE-DREAM 主前端应用 - qiankun微前端架构主应用",
  "private": true,
  "scripts": {
    "dev": "vite --mode dev --host 0.0.0.0 --port 3000",
    "build": "vite build --mode prod",
    "build:dev": "vite build --mode dev",
    "build:test": "vite build --mode test",
    "preview": "vite preview --port 3000",
    "lint": "eslint --ext .vue,.js,.ts src --fix",
    "format": "prettier --write src/**/*.{vue,js,ts,json,css,scss,less,md}",
    "serve": "vite preview --port 3000"
  },
  "dependencies": {
    "vue": "^3.4.0",
    "vue-router": "^4.2.0",
    "pinia": "^2.1.0",
    "ant-design-vue": "^4.0.0",
    "@ant-design/icons-vue": "^7.0.0",
    "axios": "^1.6.0",
    "dayjs": "^1.11.0",
    "lodash-es": "^4.17.0",
    "qiankun": "^2.10.0",
    "js-cookie": "^3.0.0",
    "nprogress": "^0.2.0",
    "@vueuse/core": "^10.5.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@vitejs/plugin-vue": "^4.5.0",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "eslint": "^8.55.0",
    "eslint-plugin-vue": "^9.19.0",
    "prettier": "^3.1.0",
    "sass": "^1.69.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-eslint": "^1.8.1",
    "vue-tsc": "^1.8.0",
    "unplugin-auto-import": "^0.17.0",
    "unplugin-vue-components": "^0.26.0"
  },
  "engines": {
