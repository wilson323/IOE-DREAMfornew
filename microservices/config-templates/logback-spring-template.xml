<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- IOE-DREAM Logback配置模板（JSON格式 + TraceId分布式追踪） -->
    <!-- 版本: v2.0.0 -->
    <!-- 企业级JSON日志配置，支持TraceId追踪，统一日志格式 -->
    <!-- 符合P2级日志标准化要求：JSON格式 + Trace ID集成 -->

    <!-- Spring Boot默认属性 -->
    <springProperty scope="context" name="APP_NAME" source="spring.application.name" defaultValue="ioe-dream"/>
    <springProperty scope="context" name="LOG_PATH" source="logging.file.path" defaultValue="logs"/>
    <springProperty scope="context" name="LOG_LEVEL" source="logging.level.root" defaultValue="INFO"/>
    <springProperty scope="context" name="ENVIRONMENT" source="spring.profiles.active" defaultValue="dev"/>

    <!-- ==================== 控制台日志输出（开发环境：彩色文本格式） ==================== -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <springProfile name="dev,test">
            <!-- 开发/测试环境：使用彩色文本格式，便于本地调试 -->
            <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
                <pattern>
                    %clr(%d{yyyy-MM-dd HH:mm:ss.SSS}){faint}
                    %clr(%-5p){blue}
                    %clr(${PID:- }){magenta}
                    %clr(---){faint}
                    %clr([%X{traceId:-},%X{spanId:-}]){cyan}
                    %clr([%15.15t]){yellow}
                    %clr(%-40.40logger{39}){green}
                    %clr(:){faint}
                    %clr(%m){white}%n
                    %clr(%wEx){red}
                </pattern>
                <charset>UTF-8</charset>
            </encoder>
        </springProfile>
        <springProfile name="prod">
            <!-- 生产环境：使用JSON格式，便于日志聚合和分析 -->
            <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
                <providers>
                    <timestamp>
                        <timeZone>Asia/Shanghai</timeZone>
                        <pattern>yyyy-MM-dd'T'HH:mm:ss.SSSZ</pattern>
                    </timestamp>
                    <version/>
                    <logLevel/>
                    <message/>
                    <mdc/>
                    <arguments/>
                    <stackTrace>
                        <throwableConverter class="net.logstash.logback.stacktrace.ShortenedThrowableConverter">
                            <maxDepthPerThrowable>30</maxDepthPerThrowable>
                            <maxLength>2048</maxLength>
                        </throwableConverter>
                    </stackTrace>
                    <pattern>
                        <pattern>
                            {
                                "application": "${APP_NAME}",
                                "service": "${APP_NAME}",
                                "environment": "${ENVIRONMENT}",
                                "traceId": "%X{traceId:-}",
                                "spanId": "%X{spanId:-}",
                                "userId": "%X{userId:-}",
                                "thread": "%thread",
                                "logger": "%logger{50}",
                                "level": "%level",
                                "message": "%message",
                                "exception": "%ex{short}"
                            }
                        </pattern>
                    </pattern>
                </providers>
            </encoder>
        </springProfile>
    </appender>

    <!-- ==================== 文件日志输出（JSON格式，包含TraceId） ==================== -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/${APP_NAME}.log</file>
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp>
                    <timeZone>Asia/Shanghai</timeZone>
                    <pattern>yyyy-MM-dd'T'HH:mm:ss.SSSZ</pattern>
                </timestamp>
                <version/>
                <logLevel/>
                <message/>
                <mdc/>
                <arguments/>
                <stackTrace>
                    <throwableConverter class="net.logstash.logback.stacktrace.ShortenedThrowableConverter">
                        <maxDepthPerThrowable>30</maxDepthPerThrowable>
                        <maxLength>2048</maxLength>
                    </throwableConverter>
                </stackTrace>
                <pattern>
                    <pattern>
                        {
                            "application": "${APP_NAME}",
                            "service": "${APP_NAME}",
                            "environment": "${ENVIRONMENT}",
                            "traceId": "%X{traceId:-}",
                            "spanId": "%X{spanId:-}",
                            "userId": "%X{userId:-}",
                            "thread": "%thread",
                            "logger": "%logger{50}",
                            "level": "%level",
                            "message": "%message",
                            "exception": "%ex{short}"
                        }
                    </pattern>
                </pattern>
            </providers>
        </encoder>

        <!-- 日志文件滚动策略 -->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/${APP_NAME}.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>3GB</totalSizeCap>
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
        </rollingPolicy>
    </appender>

    <!-- ==================== 错误日志单独文件（JSON格式，包含完整TraceId信息） ==================== -->
    <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/${APP_NAME}-error.log</file>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp>
                    <timeZone>Asia/Shanghai</timeZone>
                    <pattern>yyyy-MM-dd'T'HH:mm:ss.SSSZ</pattern>
                </timestamp>
                <version/>
                <logLevel/>
                <message/>
                <mdc/>
                <arguments/>
                <stackTrace>
                    <throwableConverter class="net.logstash.logback.stacktrace.ShortenedThrowableConverter">
                        <maxDepthPerThrowable>50</maxDepthPerThrowable>
                        <maxLength>4096</maxLength>
                    </throwableConverter>
                </stackTrace>
                <pattern>
                    <pattern>
                        {
                            "application": "${APP_NAME}",
                            "service": "${APP_NAME}",
                            "environment": "${ENVIRONMENT}",
                            "traceId": "%X{traceId:-}",
                            "spanId": "%X{spanId:-}",
                            "userId": "%X{userId:-}",
                            "thread": "%thread",
                            "logger": "%logger{50}",
                            "level": "%level",
                            "message": "%message",
                            "exception": "%ex{full}"
                        }
                    </pattern>
                </pattern>
            </providers>
        </encoder>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/${APP_NAME}-error.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>60</maxHistory>
            <totalSizeCap>5GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- ==================== 异步日志输出（提高性能，包含TraceId） ==================== -->
    <appender name="ASYNC_FILE" class="ch.qos.logback.classic.AsyncAppender">
        <!-- 不丢失WARNING及以上级别的日志 -->
        <discardingThreshold>0</discardingThreshold>
        <!-- 队列大小 -->
        <queueSize>1024</queueSize>
        <!-- 异步输出目标 -->
        <appender-ref ref="FILE"/>
        <!-- 包含调用数据 -->
        <includeCallerData>true</includeCallerData>
    </appender>

    <!-- 异步错误日志输出 -->
    <appender name="ASYNC_ERROR_FILE" class="ch.qos.logback.classic.AsyncAppender">
        <discardingThreshold>0</discardingThreshold>
        <queueSize>512</queueSize>
        <appender-ref ref="ERROR_FILE"/>
        <includeCallerData>true</includeCallerData>
    </appender>

    <!-- ==================== 日志级别配置 ==================== -->
    <!-- 特定包的日志级别配置 -->
    <logger name="net.lab1024.sa" level="${LOG_LEVEL}" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_FILE"/>
        <appender-ref ref="ASYNC_ERROR_FILE"/>
    </logger>

    <!-- ExceptionUtils日志级别（详细记录） -->
    <logger name="net.lab1024.sa.common.exception.ExceptionUtils" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_FILE"/>
    </logger>

    <!-- ExceptionMetricsCollector日志级别 -->
    <logger name="net.lab1024.sa.common.monitoring.ExceptionMetricsCollector" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_FILE"/>
    </logger>

    <!-- GlobalExceptionHandler日志级别 -->
    <logger name="net.lab1024.sa.common.exception.GlobalExceptionHandler" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_FILE"/>
        <appender-ref ref="ASYNC_ERROR_FILE"/>
    </logger>

    <!-- Spring框架日志级别 -->
    <logger name="org.springframework" level="WARN" additivity="false"/>
    <logger name="org.springframework.cloud" level="INFO" additivity="false"/>
    <logger name="org.springframework.web" level="INFO" additivity="false"/>

    <!-- 数据库相关日志 -->
    <logger name="org.mybatis" level="WARN" additivity="false"/>
    <logger name="com.alibaba.druid" level="WARN" additivity="false"/>

    <!-- Resilience4j日志 -->
    <logger name="io.github.resilience4j" level="WARN" additivity="false"/>

    <!-- Nacos相关日志 -->
    <logger name="com.alibaba.nacos" level="WARN" additivity="false"/>

    <!-- HTTP客户端日志 -->
    <logger name="org.apache.http" level="WARN" additivity="false"/>

    <!-- 缓存日志 -->
    <logger name="net.lab1024.sa.common.cache" level="WARN" additivity="false"/>

    <!-- 事务日志 -->
    <logger name="org.springframework.transaction" level="WARN" additivity="false"/>

    <!-- 根日志级别 -->
    <root level="${LOG_LEVEL}">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_FILE"/>
        <appender-ref ref="ASYNC_ERROR_FILE"/>
    </root>

    <!-- ==================== 环境特定配置 ==================== -->
    <!-- 开发环境配置 -->
    <springProfile name="dev">
        <logger name="net.lab1024.sa" level="DEBUG"/>
        <logger name="org.springframework.web" level="DEBUG"/>
        <logger name="org.springframework.cloud" level="DEBUG"/>
    </springProfile>

    <!-- 测试环境配置 -->
    <springProfile name="test">
        <logger name="net.lab1024.sa" level="INFO"/>
        <logger name="org.springframework.web" level="WARN"/>
    </springProfile>

    <!-- 生产环境配置 -->
    <springProfile name="prod">
        <logger name="net.lab1024.sa" level="WARN"/>
        <logger name="org.springframework.web" level="ERROR"/>
        <logger name="org.springframework.cloud" level="ERROR"/>
    </springProfile>

</configuration>
