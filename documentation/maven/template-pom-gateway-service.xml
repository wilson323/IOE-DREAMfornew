<?xml version="1.0" encoding="UTF-8"?>
<!--
  ============================================================
  IOE-DREAM 网关服务 POM 模板

  适用模块:
    - ioedream-gateway-service (API网关服务)

  特征:
    - ✅ 依赖所有细粒度公共模块
    - ✅ 包含完整的 Spring Cloud Gateway 依赖
    - ✅ 包含特殊功能依赖（如限流、熔断、路由）

  使用说明:
    1. 复制此模板到目标服务
    2. 修改 <artifactId> 为实际服务名
    3. 修改 <name> 和 <description>
    4. 根据业务需求调整依赖

  网关服务特殊配置:
    - 使用 Netty 作为 web server（不支持 Tomcat）
    - 需要引入 Spring Cloud Gateway 核心依赖
    - 必须包含所有细粒度公共模块（作为服务调用客户端）

  注意:
    - 此模板生成的 JAR 可以直接运行
    - 网关服务使用非阻塞 I/O 模型
  ============================================================
-->
<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
  http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <!-- ============================================================
       父 POM 配置
       ============================================================ -->
  <parent>
    <groupId>net.lab1024.sa</groupId>
    <artifactId>ioedream-microservices-parent</artifactId>
    <version>1.0.0</version>
    <relativePath>../pom.xml</relativePath>
  </parent>

  <!-- ============================================================
       模块基本信息
       ============================================================ -->
  <artifactId>ioedream-gateway-service</artifactId>
  <packaging>jar</packaging>

  <name>IOE-DREAM Gateway Service</name>
  <description>API网关服务：路由转发、负载均衡、限流熔断</description>

  <!-- ============================================================
       构建配置
       ============================================================ -->
  <build>
    <plugins>
      <!--
        启用 spring-boot-maven-plugin 的 repackage
        生成可执行 JAR,包含所有依赖
      -->
      <plugin>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-maven-plugin</artifactId>
        <executions>
          <execution>
            <goals>
              <goal>repackage</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <!-- ============================================================
       依赖管理
       ============================================================ -->
  <dependencies>
    <!-- ==================== 核心基础模块 ==================== -->

    <!-- Common Core (最小稳定内核) -->
    <dependency>
      <groupId>net.lab1024.sa</groupId>
      <artifactId>microservices-common-core</artifactId>
      <version>${project.version}</version>
    </dependency>

    <!-- ==================== 所有细粒度公共模块 (网关需要全部依赖) ==================== -->

    <!-- Common Data (数据访问层) -->
    <dependency>
      <groupId>net.lab1024.sa</groupId>
      <artifactId>microservices-common-data</artifactId>
      <version>${project.version}</version>
    </dependency>

    <!-- Common Security (安全认证) -->
    <dependency>
      <groupId>net.lab1024.sa</groupId>
      <artifactId>microservices-common-security</artifactId>
      <version>${project.version}</version>
    </dependency>

    <!-- Common Cache (缓存管理) -->
    <dependency>
      <groupId>net.lab1024.sa</groupId>
      <artifactId>microservices-common-cache</artifactId>
      <version>${project.version}</version>
    </dependency>

    <!-- Common Monitor (监控模块) -->
    <dependency>
      <groupId>net.lab1024.sa</groupId>
      <artifactId>microservices-common-monitor</artifactId>
      <version>${project.version}</version>
    </dependency>

    <!-- Common Storage (文件存储,如需要) -->
    <!--
    <dependency>
      <groupId>net.lab1024.sa</groupId>
      <artifactId>microservices-common-storage</artifactId>
      <version>${project.version}</version>
    </dependency>
    -->

    <!-- Common Export (导出功能,如需要) -->
    <!--
    <dependency>
      <groupId>net.lab1024.sa</groupId>
      <artifactId>microservices-common-export</artifactId>
      <version>${project.version}</version>
    </dependency>
    -->

    <!-- Common Workflow (工作流,如需要) -->
    <!--
    <dependency>
      <groupId>net.lab1024.sa</groupId>
      <artifactId>microservices-common-workflow</artifactId>
      <version>${project.version}</version>
    </dependency>
    -->

    <!-- Common Permission (权限验证) -->
    <dependency>
      <groupId>net.lab1024.sa</groupId>
      <artifactId>microservices-common-permission</artifactId>
      <version>${project.version}</version>
    </dependency>

    <!-- Common Business (业务公共组件) -->
    <dependency>
      <groupId>net.lab1024.sa</groupId>
      <artifactId>microservices-common-business</artifactId>
      <version>${project.version}</version>
    </dependency>

    <!-- Common Util (工具类模块) -->
    <dependency>
      <groupId>net.lab1024.sa</groupId>
      <artifactId>microservices-common-util</artifactId>
      <version>${project.version}</version>
    </dependency>

    <!-- Common Gateway Client (网关客户端,服务间调用) -->
    <dependency>
      <groupId>net.lab1024.sa</groupId>
      <artifactId>microservices-common-gateway-client</artifactId>
      <version>${project.version}</version>
    </dependency>

    <!-- ==================== Spring Cloud Gateway 核心依赖 (必须保留) ==================== -->

    <!-- Spring Cloud Gateway -->
    <dependency>
      <groupId>org.springframework.cloud</groupId>
      <artifactId>spring-cloud-starter-gateway</artifactId>
    </dependency>

    <!-- Spring Cloud Gateway MVC (可选,如果需要编程式路由) -->
    <!--
    <dependency>
      <groupId>org.springframework.cloud</groupId>
      <artifactId>spring-cloud-starter-gateway-mvc</artifactId>
    </dependency>
    -->

    <!-- ==================== Spring Boot 核心依赖 ==================== -->

    <!-- Spring Boot Starter (核心功能) -->
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter</artifactId>
    </dependency>

    <!--
      ⚠️ 注意: Spring Cloud Gateway 基于 Netty,不支持 spring-boot-starter-web
      如果引入 spring-boot-starter-web 会导致启动失败
    -->

    <!-- Spring Boot Validation (参数验证) -->
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter-validation</artifactId>
    </dependency>

    <!-- Spring Boot Actuator (健康检查) -->
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter-actuator</artifactId>
    </dependency>

    <!-- ==================== Spring Cloud 微服务依赖 (必须保留) ==================== -->

    <!-- Spring Cloud Nacos Discovery (服务发现) -->
    <dependency>
      <groupId>com.alibaba.cloud</groupId>
      <artifactId>spring-cloud-starter-alibaba-nacos-discovery</artifactId>
    </dependency>

    <!-- Spring Cloud Nacos Config (配置中心) -->
    <dependency>
      <groupId>com.alibaba.cloud</groupId>
      <artifactId>spring-cloud-starter-alibaba-nacos-config</artifactId>
    </dependency>

    <!-- ==================== 负载均衡 (必须保留) ==================== -->

    <!-- Spring Cloud LoadBalancer (负载均衡) -->
    <dependency>
      <groupId>org.springframework.cloud</groupId>
      <artifactId>spring-cloud-starter-loadbalancer</artifactId>
    </dependency>

    <!-- ==================== 服务容错 (推荐保留) ==================== -->

    <!-- Resilience4j (容错机制) -->
    <dependency>
      <groupId>io.github.resilience4j</groupId>
      <artifactId>resilience4j-spring-boot3</artifactId>
    </dependency>
    <dependency>
      <groupId>io.github.resilience4j</groupId>
      <artifactId>resilience4j-retry</artifactId>
    </dependency>
    <dependency>
      <groupId>io.github.resilience4j</groupId>
      <artifactId>resilience4j-circuitbreaker</artifactId>
    </dependency>
    <dependency>
      <groupId>io.github.resilience4j</groupId>
      <artifactId>resilience4j-ratelimiter</artifactId>
    </dependency>
    <dependency>
      <groupId>io.github.resilience4j</groupId>
      <artifactId>resilience4j-micrometer</artifactId>
    </dependency>

    <!-- ==================== 监控指标 (推荐保留) ==================== -->

    <!-- Micrometer Core (监控指标) -->
    <dependency>
      <groupId>io.micrometer</groupId>
      <artifactId>micrometer-core</artifactId>
    </dependency>

    <!-- ==================== HTTP 客户端 (推荐保留) ==================== -->

    <!-- HTTP Client 5 (用于后端服务调用) -->
    <dependency>
      <groupId>org.apache.httpcomponents.client5</groupId>
      <artifactId>httpclient5</artifactId>
    </dependency>

    <!-- ==================== 缓存支持 (推荐保留) ==================== -->

    <!-- Redis (限流、缓存) -->
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter-data-redis-reactive</artifactId>
    </dependency>

    <!-- ==================== 第三方库依赖 ==================== -->

    <!-- FastJSON2 (JSON解析) -->
    <dependency>
      <groupId>com.alibaba.fastjson2</groupId>
      <artifactId>fastjson2</artifactId>
      <version>2.0.43</version>
    </dependency>

    <!-- Commons Codec (摘要算法) -->
    <dependency>
      <groupId>commons-codec</groupId>
      <artifactId>commons-codec</artifactId>
      <version>1.15</version>
    </dependency>

    <!-- ==================== 测试依赖 (必须保留) ==================== -->

    <!-- Spring Boot Test -->
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter-test</artifactId>
      <scope>test</scope>
    </dependency>

    <!-- JUnit Jupiter -->
    <dependency>
      <groupId>org.junit.jupiter</groupId>
      <artifactId>junit-jupiter</artifactId>
      <scope>test</scope>
    </dependency>

    <!-- Mockito Core -->
    <dependency>
      <groupId>org.mockito</groupId>
      <artifactId>mockito-core</artifactId>
      <scope>test</scope>
    </dependency>

    <!-- Mockito JUnit Jupiter -->
    <dependency>
      <groupId>org.mockito</groupId>
      <artifactId>mockito-junit-jupiter</artifactId>
      <scope>test</scope>
    </dependency>

    <!--
      ⚠️ 注意: 网关服务测试需要特殊的测试配置
      建议使用 @SpringBootTest(webEnvironment = WebEnvironment.NONE)
      避免 Netty 环境冲突
    -->
  </dependencies>
</project>
