{
  "dashboard": {
    "id": null,
    "title": "IOE-DREAM 通用服务监控",
    "tags": ["ioedream", "common-service", "monitoring"],
    "timezone": "Asia/Shanghai",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "服务概览",
        "type": "stat",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        },
        "targets": [
          {
            "expr": "up{application=\"ioedream-common-service\"}",
            "legendFormat": "{{instance}} - 服务状态"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {
                "options": {
                  "0": {
                    "text": "DOWN",
                    "color": "red"
                  },
                  "1": {
                    "text": "UP",
                    "color": "green"
                  }
                },
                "type": "value"
              }
            ],
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "green",
                  "value": 1
                }
              ]
            }
          }
        },
        "options": {
          "colorMode": "background",
          "graphMode": "none",
          "justifyMode": "center",
          "orientation": "horizontal",
          "reduceOptions": {
            "calcs": [
              "lastNotNull"
            ],
            "fields": "",
            "values": false
          }
        }
      },
      {
        "id": 2,
        "title": "运行时间",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 12,
          "y": 0
        },
        "targets": [
          {
            "expr": "application_uptime_seconds{application=\"ioedream-common-service\"}",
            "legendFormat": "运行时间"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "dtdurations",
            "mappings": []
          }
        }
      },
      {
        "id": 3,
        "title": "活跃告警",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 18,
          "y": 0
        },
        "targets": [
          {
            "expr": "sum(increase(alert_total{application=\"ioedream-common-service\",severity=\"critical\"}[5m]))",
            "legendFormat": "严重告警"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [],
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 1
                },
                {
                  "color": "red",
                  "value": 5
                }
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "HTTP请求总量",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 0,
          "y": 8
        },
        "targets": [
          {
            "expr": "rate(http_requests_total{application=\"ioedream-common-service\"}[5m])",
            "legendFormat": "{{method}} {{uri}} - QPS",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "QPS"
          }
        ]
      },
      {
        "id": 5,
        "title": "HTTP响应时间",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 8,
          "y": 8
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, http_request_duration_seconds_bucket{application=\"ioedream-common-service\"})",
            "legendFormat": "P95响应时间",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.99, http_request_duration_seconds_bucket{application=\"ioedream-common-service\"})",
            "legendFormat": "P99响应时间",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "秒"
          }
        ]
      },
      {
        "id": 6,
        "title": "HTTP错误率",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 16,
          "y": 8
        },
        "targets": [
          {
            "expr": "rate(http_requests_total{application=\"ioedream-common-service\",status!~\"2..\"}[5m]) / rate(http_requests_total{application=\"ioedream-common-service\"}[5m])",
            "legendFormat": "错误率",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "百分比",
            "max": 1,
            "min": 0,
            "unit": "percentunit"
          }
        ]
      },
      {
        "id": 7,
        "title": "JVM内存使用",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        },
        "targets": [
          {
            "expr": "jvm_memory_used_bytes{application=\"ioedream-common-service\",area=\"heap\"}",
            "legendFormat": "堆内存已用",
            "refId": "A"
          },
          {
            "expr": "jvm_memory_max_bytes{application=\"ioedream-common-service\",area=\"heap\"}",
            "legendFormat": "堆内存最大",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "字节",
            "unit": "bytes"
          }
        ]
      },
      {
        "id": 8,
        "title": "CPU使用率",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 16
        },
        "targets": [
          {
            "expr": "system_cpu_usage{application=\"ioedream-common-service\"}",
            "legendFormat": "CPU使用率",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "百分比",
            "max": 1,
            "min": 0,
            "unit": "percentunit"
          }
        ]
      },
      {
        "id": 9,
        "title": "GC统计",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 24
        },
        "targets": [
          {
            "expr": "rate(jvm_gc_pause_seconds_sum{application=\"ioedream-common-service\"}[5m])",
            "legendFormat": "GC耗时/秒",
            "refId": "A"
          },
          {
            "expr": "rate(jvm_gc_pause_seconds_count{application=\"ioedream-common-service\"}[5m])",
            "legendFormat": "GC次数/秒",
            "refId": "B"
          }
        ]
      },
      {
        "id": 10,
        "title": "线程数",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 24
        },
        "targets": [
          {
            "expr": "jvm_threads_live_threads{application=\"ioedream-common-service\"}",
            "legendFormat": "活跃线程数",
            "refId": "A"
          },
          {
            "expr": "jvm_threads_peak_threads{application=\"ioedream-common-service\"}",
            "legendFormat": "峰值线程数",
            "refId": "B"
          }
        ]
      },
      {
        "id": 11,
        "title": "缓存命中率",
        "type": "stat",
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 0,
          "y": 32
        },
        "targets": [
          {
            "expr": "cache_hit_rate{application=\"ioedream-common-service\"}",
            "legendFormat": "缓存命中率"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "mappings": [],
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 0.8
                },
                {
                  "color": "green",
                  "value": 0.95
                }
              ]
            }
          }
        }
      },
      {
        "id": 12,
        "title": "数据库连接池",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 6,
          "y": 32
        },
        "targets": [
          {
            "expr": "hikaricp_connections_active{application=\"ioedream-common-service\"}",
            "legendFormat": "活跃连接",
            "refId": "A"
          },
          {
            "expr": "hikaricp_connections_idle{application=\"ioedream-common-service\"}",
            "legendFormat": "空闲连接",
            "refId": "B"
          }
        ]
      },
      {
        "id": 13,
        "title": "业务指标 - 用户操作",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 12,
          "y": 32
        },
        "targets": [
          {
            "expr": "rate(business_user_login_total{application=\"ioedream-common-service\"}[5m])",
            "legendFormat": "用户登录",
            "refId": "A"
          }
        ]
      },
      {
        "id": 14,
        "title": "告警状态表",
        "type": "table",
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 18,
          "y": 32
        },
        "targets": [
          {
            "expr": "alert_total{application=\"ioedream-common-service\"}",
            "legendFormat": "{{alert_rule}} - {{severity}}",
            "refId": "A",
            "format": "table"
          }
        ],
        "transformations": [
          {
            "id": "filterFieldsByName",
            "options": {
              "include": {
                "names": [
                  "alert_rule",
                  "severity",
                  "value"
                ]
              }
            }
          }
        ]
      }
    ],
    "templating": {
      "list": [
        {
          "name": "application",
          "type": "query",
          "query": "label_values(up, application)",
          "refresh": 1,
          "includeAll": false,
          "current": {
            "selected": false,
            "text": "ioedream-common-service",
            "value": "ioedream-common-service"
          }
        }
      ]
    },
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s"
  }
}